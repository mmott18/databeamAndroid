<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="databeam.databeamui.DDForm"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/getFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/getMiddle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/getMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Middle Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/getLast"
        app:layout_constraintStart_toStartOf="@+id/getFirst"
        app:layout_constraintTop_toBottomOf="@+id/getFirst" />

    <EditText
        android:id="@+id/getLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/getAddr"
        app:layout_constraintStart_toStartOf="@+id/getMiddle"
        app:layout_constraintTop_toBottomOf="@+id/getMiddle" />

    <EditText
        android:id="@+id/getAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/getCity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getLast" />

    <EditText
        android:id="@+id/getCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/getState"
        app:layout_constraintStart_toStartOf="@+id/getAddr"
        app:layout_constraintTop_toBottomOf="@+id/getAddr" />

    <EditText
        android:id="@+id/getState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="State"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/getZip"
        app:layout_constraintStart_toStartOf="@+id/getCity"
        app:layout_constraintTop_toBottomOf="@+id/getCity" />

    <EditText
        android:id="@+id/getZip"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Zip Code"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/getRoutingNumber"
        app:layout_constraintStart_toStartOf="@+id/getState"
        app:layout_constraintTop_toBottomOf="@+id/getState" />

    <EditText
        android:id="@+id/getRoutingNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Routing Number"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/storeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getZip" />

    <Button
        android:id="@+id/storeText"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="@color/colorButton"
        android:text="@string/storeTextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getRoutingNumber" />
</android.support.constraint.ConstraintLayout>